<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/flight_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Air Canada Flight 12959085" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cost_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Cost: $300.00"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/duration_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Duration 05:30"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/travel_origin_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="YYZ" />
            <TextView
                android:id="@+id/departure_date_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departs 2015-07-01 12:30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


        <TextView
                android:id="@+id/travel_destination_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="JFK" />
            <TextView
                android:id="@+id/arrival_date_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrives 2015-07-01 12:30" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout><!-- From: file:/Users/Husham/Desktop/School/CSC207/group_0366/PIII/AirTravelAgent/app/src/main/res/layout/flight_list_item.xml -->