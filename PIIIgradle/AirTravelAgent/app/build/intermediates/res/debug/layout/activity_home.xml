<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group0366.com.airtravelagent.frontend.SignInActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/email_display"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="davidjhan@gmail.com" />

        <TextView
            android:id="@+id/status_display"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:text="@string/status" />
        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:hint="Search For Flight"/>-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="viewMyInformation"
            android:text="@string/my_information" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="searchFlights"
            android:text="@string/search_flights" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="searchItineraries"
            android:text="@string/search_itineraries" />

        <Button
            android:id="@+id/view_clients_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="viewClients"
            android:text="@string/view_clients" />

        <Button
            android:id="@+id/upload_flight_info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="viewClients"
            android:text="@string/upload_flight_information" />

        <Button
            android:id="@+id/upload_client_info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="uploadClientInfo"
            android:text="@string/upload_client_and_billing_information" />
    </LinearLayout>
</ScrollView>

