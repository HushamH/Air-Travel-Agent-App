            android:name="group0366.com.airtravelagent.frontend.SignInActivity"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name="group0366.com.airtravelagent.frontend.SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name="group0366.com.airtravelagent.frontend.LauncherActivity"
            android:label="@string/title_activity_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="group0366.com.airtravelagent.frontend.SearchActivity" />
        <activity android:name="group0366.com.airtravelagent.frontend.ResultsActivity" />
